        BLOCK "040904b0" {
            VALUE "Comments",         FASTFETCH_PROJECT_DESCRIPTION
            VALUE "FileDescription",  FF_TO_STR(FASTFETCH_TARGET_BINARY_NAME)
            VALUE "FileVersion",      FASTFETCH_PROJECT_VERSION FASTFETCH_PROJECT_VERSION_TWEAK
